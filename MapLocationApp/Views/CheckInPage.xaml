<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MapLocationApp.Views.CheckInPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="⏰ 位置打卡"
             Background="{StaticResource BackgroundGradient}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- 頁面標題 -->
            <Label Text="智慧考勤系統" Style="{StaticResource PageTitle}"/>

            <!-- 目前位置卡片 -->
            <Border Style="{StaticResource ModernCard}">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="📍" FontSize="24"/>
                        <Label Text="目前位置" Style="{StaticResource SectionTitle}"/>
                    </HorizontalStackLayout>
                    
                    <VerticalStackLayout Spacing="8">
                        <Label x:Name="CurrentLocationLabel"
                               Text="🔄 正在獲取位置..."
                               Style="{StaticResource BodyText}"
                               FontSize="16"/>
                        <Label x:Name="AccuracyLabel"
                               Text=""
                               Style="{StaticResource CaptionText}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- 附近區域卡片 -->
            <Border Style="{StaticResource ModernCard}">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="🎯" FontSize="24"/>
                        <Label Text="附近區域" Style="{StaticResource SectionTitle}"/>
                    </HorizontalStackLayout>
                    
                    <CollectionView x:Name="NearbyGeofencesCollectionView" 
                                    MaximumHeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="{StaticResource Gray50}" 
                                        StrokeShape="RoundRectangle 12"
                                        Stroke="Transparent"
                                        Padding="16" 
                                        Margin="0,4">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Name}"
                                               Style="{StaticResource SubTitle}"/>
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding Description}"
                                               Style="{StaticResource CaptionText}"/>
                                        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                                BackgroundColor="{StaticResource Primary}"
                                                StrokeShape="RoundRectangle 8"
                                                Stroke="Transparent"
                                                Padding="8,4"
                                                VerticalOptions="Center">
                                            <Label Text="{Binding DistanceText}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- 打卡操作卡片 -->
            <Border Style="{StaticResource ModernCard}">
                <VerticalStackLayout Spacing="20">
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="⚡" FontSize="24"/>
                        <Label Text="打卡操作" Style="{StaticResource SectionTitle}"/>
                    </HorizontalStackLayout>
                    
                    <VerticalStackLayout Spacing="16">
                        <Picker x:Name="GeofencePicker"
                                Title="選擇打卡地點"
                                Style="{StaticResource ModernPicker}"
                                SelectedIndexChanged="OnGeofenceSelected" />
                        
                        <Entry x:Name="NotesEntry"
                               Placeholder="✍️ 備註 (選填)"
                               Style="{StaticResource ModernEntry}"
                               MaxLength="200" />
                        
                        <!-- 打卡按鈕群組 -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                            <Button Grid.Column="0"
                                    x:Name="CheckInButton"
                                    Text="🟢 打卡上班"
                                    Style="{StaticResource SuccessButton}"
                                    Clicked="OnCheckInClicked" />
                            
                            <Button Grid.Column="1"
                                    x:Name="CheckOutButton"
                                    Text="🔴 打卡下班"
                                    Style="{StaticResource DangerButton}"
                                    Clicked="OnCheckOutClicked"
                                    IsEnabled="False" />
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- 今日記錄卡片 -->
            <Border Style="{StaticResource ModernCard}">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="📋" FontSize="24"/>
                        <Label Text="今日記錄" Style="{StaticResource SectionTitle}"/>
                    </HorizontalStackLayout>
                    
                    <CollectionView x:Name="TodayRecordsCollectionView"
                                    MaximumHeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="{StaticResource Gray50}" 
                                        StrokeShape="RoundRectangle 12"
                                        Stroke="Transparent"
                                        Padding="16" 
                                        Margin="0,4">
                                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                        <!-- 時間標記 -->
                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                                BackgroundColor="{StaticResource Success}"
                                                StrokeShape="RoundRectangle 8"
                                                Stroke="Transparent"
                                                Padding="8"
                                                VerticalOptions="Center"
                                                Margin="0,0,12,0">
                                            <Label Text="⏰"
                                                   FontSize="16"
                                                   TextColor="White"/>
                                        </Border>
                                        
                                        <!-- 記錄內容 -->
                                        <Label Grid.Row="0" Grid.Column="1"
                                               Text="{Binding GeofenceName}"
                                               Style="{StaticResource SubTitle}"/>
                                        <Label Grid.Row="1" Grid.Column="1"
                                               Text="{Binding Notes}"
                                               Style="{StaticResource CaptionText}"/>
                                        
                                        <!-- 時間和持續時間 -->
                                        <VerticalStackLayout Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                                                             VerticalOptions="Center">
                                            <Label Text="{Binding CheckInTimeText}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Primary}"
                                                   HorizontalTextAlignment="End"/>
                                            <Label Text="{Binding DurationText}"
                                                   Style="{StaticResource CaptionText}"
                                                   HorizontalTextAlignment="End"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- 重新整理按鈕 -->
            <Button x:Name="RefreshButton"
                    Text="🔄 重新整理"
                    Style="{StaticResource OutlineButton}"
                    Clicked="OnRefreshClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>