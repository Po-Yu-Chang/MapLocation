<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- 現代化主色調 -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#4F46E5</Color>
    <Color x:Key="PrimaryLight">#A5B4FC</Color>
    <Color x:Key="PrimaryDarkText">#1E1B4B</Color>
    
    <Color x:Key="Secondary">#F59E0B</Color>
    <Color x:Key="SecondaryDark">#D97706</Color>
    <Color x:Key="SecondaryLight">#FDE68A</Color>
    <Color x:Key="SecondaryDarkText">#92400E</Color>
    
    <Color x:Key="Tertiary">#10B981</Color>
    <Color x:Key="TertiaryDark">#059669</Color>
    <Color x:Key="TertiaryLight">#A7F3D0</Color>

    <!-- 功能色彩 -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>
    
    <!-- 背景漸層 -->
    <Color x:Key="BackgroundStart">#F8FAFC</Color>
    <Color x:Key="BackgroundEnd">#E2E8F0</Color>
    
    <!-- 卡片背景 -->
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="CardShadow">#1F29371A</Color>

    <!-- 基本色彩 -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <!-- 灰階色彩 -->
    <Color x:Key="Gray50">#F8FAFC</Color>
    <Color x:Key="Gray100">#F1F5F9</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray700">#334155</Color>
    <Color x:Key="Gray800">#1E293B</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#020617</Color>

    <!-- 現代化筆刷 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <!-- 主題適應筆刷 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray950}}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray200}}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"/>

    <SolidColorBrush x:Key="Gray50Brush" Color="{StaticResource Gray50}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
    
    <!-- 功能筆刷 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>
    
    <!-- 漸層背景 -->
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray950}}" Offset="0"/>
        <GradientStop Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>