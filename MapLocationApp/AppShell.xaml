<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MapLocationApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MapLocationApp"
    xmlns:views="clr-namespace:MapLocationApp.Views"
    Title="MapLocationApp">

    <TabBar>
        <ShellContent
            Title="首頁"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="地圖"
            Icon="map.png"
            ContentTemplate="{DataTemplate views:MapPage}"
            Route="MapPage" />

        <ShellContent
            Title="打卡"
            Icon="checkin.png"
            ContentTemplate="{DataTemplate views:CheckInPage}"
            Route="CheckInPage" />

        <ShellContent
            Title="設定"
            Icon="settings.png"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

    <!-- 新增其他頁面的路由 -->
    <ShellContent
        ContentTemplate="{DataTemplate views:PrivacyPolicyPage}"
        Route="PrivacyPolicy" />

</Shell>
