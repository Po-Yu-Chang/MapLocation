<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapLocationApp.MainPage"
             Background="{StaticResource BackgroundGradient}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">
            
            <!-- 標題區域 -->
            <Border Style="{StaticResource ModernCard}" Margin="0,20,0,0">
                <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Label Text="📍" FontSize="48" HorizontalOptions="Center"/>
                    <Label Text="MapLocation" Style="{StaticResource PageTitle}"/>
                    <Label Text="智慧位置管理系統" Style="{StaticResource BodyText}" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- 功能卡片區域 -->
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" RowSpacing="16" ColumnSpacing="16">
                
                <!-- 地圖功能 -->
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource ModernCard}">
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="🗺️" FontSize="32" HorizontalOptions="Center"/>
                        <Label Text="地圖導航" Style="{StaticResource SubTitle}" HorizontalOptions="Center"/>
                        <Label Text="查看位置和地理圍欄" Style="{StaticResource CaptionText}" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                        <Button Text="開啟地圖" Style="{StaticResource PrimaryButton}" 
                                Clicked="OnMapClicked" WidthRequest="120"/>
                    </VerticalStackLayout>
                </Border>

                <!-- 打卡功能 -->
                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource ModernCard}">
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="⏰" FontSize="32" HorizontalOptions="Center"/>
                        <Label Text="位置打卡" Style="{StaticResource SubTitle}" HorizontalOptions="Center"/>
                        <Label Text="GPS智慧考勤系統" Style="{StaticResource CaptionText}" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                        <Button Text="開始打卡" Style="{StaticResource SuccessButton}" 
                                Clicked="OnCheckInClicked" WidthRequest="120"/>
                    </VerticalStackLayout>
                </Border>

                <!-- 隱私政策 -->
                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource ModernCard}">
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="🔒" FontSize="32" HorizontalOptions="Center"/>
                        <Label Text="隱私政策" Style="{StaticResource SubTitle}" HorizontalOptions="Center"/>
                        <Label Text="了解資料保護政策" Style="{StaticResource CaptionText}" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                        <Button Text="查看政策" Style="{StaticResource OutlineButton}" 
                                Clicked="OnPrivacyClicked" WidthRequest="120"/>
                    </VerticalStackLayout>
                </Border>

                <!-- 設定 -->
                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernCard}">
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="⚙️" FontSize="32" HorizontalOptions="Center"/>
                        <Label Text="應用設定" Style="{StaticResource SubTitle}" HorizontalOptions="Center"/>
                        <Label Text="個人化設定選項" Style="{StaticResource CaptionText}" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                        <Button Text="設定選項" Style="{StaticResource SecondaryButton}" 
                                Clicked="OnSettingsClicked" WidthRequest="120"/>
                    </VerticalStackLayout>
                </Border>

            </Grid>

            <!-- 狀態資訊卡片 -->
            <Border Style="{StaticResource ModernCard}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="系統狀態" Style="{StaticResource SectionTitle}"/>
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="12">
                        <Label Grid.Row="0" Grid.Column="0" Text="🔍" FontSize="20"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="GPS定位服務: 準備就緒" Style="{StaticResource BodyText}"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="📍" FontSize="20"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="地理圍欄監控: 啟動中" Style="{StaticResource BodyText}"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="☁️" FontSize="20"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="雲端同步: 已連接" Style="{StaticResource BodyText}"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- 快速操作按鈕 -->
            <Button x:Name="QuickLocationBtn"
                    Text="📍 獲取當前位置" 
                    Style="{StaticResource OutlineButton}"
                    Clicked="OnQuickLocationClicked"/>

            <!-- 版本資訊 -->
            <Label Text="MapLocation v1.0.0" 
                   Style="{StaticResource CaptionText}" 
                   HorizontalOptions="Center" 
                   Margin="0,20,0,10"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
